<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="px-3 py-2 bg-red-500 rounded-md mb-5 inline-block text-sm"
          href="/logout"
          >Logout</a
        >
      </div>
      <h1 class="text-3xl mb-5">
        <span class="font-light">Hello,</span> <%=user.name %>
      </h1>
      <h5 class="mb-5">you can create a new post.</h5>

      <form action="/post" method="post">
        <textarea
          name="content"
          placeholder="What's on your mid ? "
          class="p-3 w-1/3 resize-none bg-transparent border-2 border-zinc-700 rounded-md outline-none block"
        ></textarea>
        <input
          class="px-3 py-2 w-40 text-sm bg-blue-500 block rounded-md mt-2"
          type="submit"
          value="create new post "
        />
      </form>

      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts.</h3>
        <% user.posts.reverse().forEach(function(post){%>
        <div class="postcontainer mt-5">
          <div
            class="post w-1/3 p-4 bg-zinc-800 rounded-md border-[1px] mb-4 border-zinc-700"
          >
            <h4 class="mb-2 text-blue-500"><%=user.username %></h4>
            <p class="text-sm tracking-tight"><%=post.content %></p>
            <div class="btns flex gap-4 mt-5">
              <a class="text-blue-500" href="">Like</a>
              <a class="text-zinc-400" href="">Edit</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
